<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="add_data_person" author="jakob">
        <insert tableName="person">
            <column name="firstname">jakob</column>
            <column name="lastname">he</column>
        </insert>
        <rollback>
            delete from person where firstname = 'jakob' and lastname = 'he'
        </rollback>
    </changeSet>

    <changeSet id="add_column_person_age" author="jakob">
        <addColumn tableName="person">
            <column name="age" type="int"/>
        </addColumn>
    </changeSet>

    <changeSet id="set_default_value_for_age" author="jakob">
        <sql splitStatements="false">
            update person set age = 0 where age is null
        </sql>
        <rollback>
            update person set age = null where age = 0
        </rollback>
    </changeSet>

    <changeSet id="" author="jakob">
        <tagDatabase tag="v_5.4.1"/>
    </changeSet>

</databaseChangeLog>